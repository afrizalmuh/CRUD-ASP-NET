@model IEnumerable<CRUD_APPLICATION.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<h1>CRUD Application</h1>

<body>
    <div>
        <div style="display:inline-block">
            <span style="display:inline-block">Search</span>
            <form method="get" action="/Search" style="display:inline-block">
                <input type="text" name="q" placeholder="Cari...">
                <button type="submit">Cari</button>
            </form>
        </div>

        <div>
            <p style="border:1px solid black;border-radius:2px;float:right; padding:5px; text-align:right">
                <a style="font-weight:bold;color:black;text-decoration:none" asp-action="Create">Create New</a>
            </p>
            <table class="table">
                <thead style="border:1px solid black; text-align:center">
                    <tr style="border:1px solid black ">
                        <th>
                            No
                        </th>
                        <th>
                            NIK
                        </th>
                        <th>
                            Nama
                        </th>
                        <th>
                            Alamat
                        </th>
                        <th>
                            Status Perkawinan
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody style="text-align:center">
                    @{
                        int increment = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @increment
                                @{
                                    increment++;
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nik)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Alamat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StatusPerkawinan)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    


    
</body>

